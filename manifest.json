{
  "manifest_version": 3,
  "name": "Tempo Controller (Video Speed Controller)",
  "version": "1.3.0",
  "description": "Control and adjust the playback speed of HTML5 videos with a floating badge.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
